---
import Layout from "../layouts/Layout.astro";
import HeroSection from "../components/hero.astro";
import AboutSection from "../components/about-section.astro";
import HighlightsSection from "../components/highlights-section.astro";
import WhyUsSection from "../components/why-us-section.astro";
import OurValuesSection from "../components/our-values-section.astro";
import ServicesSection from "../components/services.astro";
import TestimonialsSection from "../components/testimonials.astro";
import TeamSection from "../components/team.astro";
import ContactUsSection from "../components/contact-us.astro";
import Footer from "../components/footer.astro";
import ScrollTopButton from "../components/scroll-top-button.astro";
---

<Layout>

    <main class="main">
      <section id="hero" class="hero section">
		  <HeroSection/>
      </section>
    
      <section id="about" class="about section">
		  <AboutSection/>
      </section>
     
      <section id="features" class="features section">
		<HighlightsSection/>
      </section>

      <section id="why_us" class="stats section">
		<WhyUsSection/>
      </section>
    
      <section id="values" class="values section">
		<OurValuesSection/>
      </section>
    
      <section id="services" class="services section">
        <ServicesSection/>
      </section>
      
      <section id="testimonials" class="testimonials section">
       <TestimonialsSection/> 
      </section>

      
      <section id="team" class="team section">
      	<TeamSection/>
      </section>

      <section id="contact" class="contact section">
       	<ContactUsSection/>
      </section>
    </main>

   
	<Footer/>

    <ScrollTopButton/>

    <!-- TODO: Check if this is needed -->
    <style >
      /* Shared Dialog Styles */
      .shared-dialog .modal-content {
        border-radius: 12px;
        border: none;
        overflow: hidden;
      }

      .shared-dialog .modal-header {
        background: linear-gradient(
          135deg,
          var(--accent-color),
          color-mix(in srgb, var(--accent-color), transparent 20%)
        );
        color: var(--contrast-color);
        border: none;
        padding: 30px 60px 30px 30px;
        position: relative;
      }

      .shared-dialog .modal-header h2 {
        margin: 0;
        font-size: 28px;
        font-weight: 700;
        color: var(--contrast-color);
      }

      .shared-dialog .modal-header .subtitle {
        margin: 0;
        font-size: 16px;
        opacity: 0.9;
        font-weight: 400;
      }

      .shared-dialog .btn-close {
        position: absolute;
        top: 30px;
        right: 30px;
        background: transparent;
        border: none;
        color: var(--contrast-color);
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 20px;
        cursor: pointer;
        transition: all 0.3s ease;
        opacity: 0.8;
      }

      .shared-dialog .btn-close:hover {
        background: rgba(255, 255, 255, 0.2);
        transform: scale(1.1);
        opacity: 1;
      }

      .shared-dialog .modal-body {
        padding: 40px;
        background: var(--contrast-color);
        max-height: 70vh;
        overflow-y: auto;
      }

      .shared-dialog .modal-footer {
        padding: 30px 40px;
        background: color-mix(in srgb, var(--default-color), transparent 95%);
        border: none;
        text-align: center;
      }

      .shared-dialog .btn-contact {
        display: inline-flex;
        align-items: center;
        padding: 12px 30px;
        background: var(--accent-color);
        color: var(--contrast-color);
        text-decoration: none;
        border-radius: 8px;
        font-weight: 600;
        transition: all 0.3s ease;
        border: 2px solid var(--accent-color);
      }

      .shared-dialog .btn-contact:hover {
        background: transparent;
        color: var(--accent-color);
        transform: translateY(-2px);
        box-shadow: 0 8px 25px
          color-mix(in srgb, var(--accent-color), transparent 70%);
      }

      .shared-dialog .btn-contact i {
        margin-left: 8px;
      }

      /* Shared Dialog Responsive Design */
      @media (max-width: 768px) {
        .shared-dialog .modal-header {
          padding: 20px 50px 20px 20px;
        }

        .shared-dialog .modal-header h2 {
          font-size: 24px;
          margin: 0;
        }

        .shared-dialog .btn-close {
          top: 20px;
          right: 20px;
        }

        .shared-dialog .modal-body {
          padding: 20px;
        }

        .shared-dialog .modal-footer {
          padding: 20px;
        }
      }

      /* Shared Dialog Custom Scrollbar */
      .shared-dialog .modal-body::-webkit-scrollbar {
        width: 6px;
      }

      .shared-dialog .modal-body::-webkit-scrollbar-track {
        background: color-mix(in srgb, var(--default-color), transparent 90%);
        border-radius: 3px;
      }

      .shared-dialog .modal-body::-webkit-scrollbar-thumb {
        background: var(--accent-color);
        border-radius: 3px;
      }

      .shared-dialog .modal-body::-webkit-scrollbar-thumb:hover {
        background: color-mix(in srgb, var(--accent-color), transparent 20%);
      }
    </style>
</Layout>

<script src="/src/assets/js/main.js" defer></script>